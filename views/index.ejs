<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From: <i><%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form method="GET" action="/chats/<%= chat._id%>/edit">
                    <button>
                        Edit
                    </button>
                </form>
                <br>
                <form method="post" action="/chats/<%= chat._id%>?_method=DELETE">
                    <button>
                        Delete
                    </button>
                </form>
            </div>
            <p>Received by <i><%= chat.to %></i></p>
            <hr>
            <p>
                Created at: <%= chat.created_at.toString().split(" ")[4]%> 
                (<%= chat.created_at.toString().split(" ").slice(0,4).join("-")%>)
            </P>

            <% if (chat.updated_at) { %>
                <p>
                    Updated at: <%= chat.updated_at.toString(). split(" ")[4] %> 
                    (<%= chat.updated_at.toString().split(" "). slice(0,4).join("-") %>)
                </p>
    
            <% } %>

        </div>
        <br>
        <br>
    <% } %>
</body>
</html>
